<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class"> com.mysql.jdbc.Driver </property>
        <!-- Thông tin kết nối db -->
        <property name="hibernate.connection.url"> jdbc:mysql://localhost/simplehr</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">1234</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <!-- List các file mapping XML -->
        <mapping resource="Employee.hbm.xml" />
        <mapping resource="Boss.hbm.xml"/>
        <mapping resource="Book.hbm.xml"/>
        <mapping resource="Person.hbm.xml"/>
        <mapping resource="Event.hbm.xml"/>
        <mapping class="quyet.demo.hibernate.entities.simplehr.Department"/>

    </session-factory>
</hibernate-configuration>