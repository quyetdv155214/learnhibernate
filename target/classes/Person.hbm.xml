<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="quyet.demo.hibernate.entities.mappingexample.oneToOne">
    <class name="Person" table="person" >
        <id name="personId" type="int" column="personid">
            <generator class="identity"/>
        </id>
        <property name="personName" column="personname" type="string"/>
        <one-to-one name="personDetail" class="PersonDetail"/>

    </class>
</hibernate-mapping>